<footer>
  <small>
    <% if current_user && current_user.if_admin == true %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %> | <%= link_to "Admin panel", admin_users_path %>)
    <% elsif current_user && current_user.if_admin != true %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>