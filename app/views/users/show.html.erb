<%= link_to "Back to all movies", movies_path %><br/>
<h1><%= @user.full_name %>'s Profile</h1>
<h2><%= @user.full_name %> - <%= @user.email %></h2>
<h3><em><%= @user.full_name %></em>'s Reviews</h3>
<% @user.reviews.each do |review| %>
  <%= link_to "#{review.movie.title}", movie_path(review.movie) %><br/>
  <p><%= review.text %></p>
  <p><%= review.rating_out_of_ten %>/10</p>
<% end %>